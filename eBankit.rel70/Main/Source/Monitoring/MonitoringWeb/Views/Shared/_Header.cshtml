<div id="header" class="header navbar navbar-default navbar-fixed-top">
    <!-- begin container-fluid -->
    <div class="container-fluid">
        <!-- begin mobile sidebar expand / collapse button -->
        <div class="navbar-header">
            <a href="@Url.Action("Index", "Home")" onclick="waitLoading();" class="navbar-brand">@ViewBag.Title</a>
            <button type="button" class="navbar-toggle" data-click="sidebar-toggled">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        @if (ViewBag.ShowLogout == null || ViewBag.ShowLogout == true)
        {
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown navbar-user">
                    <a href='#' data-toggle='modal' data-target="#modal-logout">
                        <img src="~/Content/img/logout.png" title="Log out" />
                    </a>
                </li>
            </ul>
        }
    </div>
    <!-- end container-fluid -->
</div>