@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "ebankIT_Master.cshtml";
    var currSegment = CurrentPage.AncestorsOrSelf().Where("DocumentTypeAlias == \"ebankIT_ProductList\"").FirstOrDefault();
    var currProduct = CurrentPage;
    var productImage = string.Empty;

    if (CurrentPage.ebankIT_productImage != null && !(CurrentPage.ebankIT_productImage is Umbraco.Core.Dynamics.DynamicNull))
    {
        var m =  (CurrentPage.ebankIT_productImage);
        productImage = @m.Url;
    }


}
<div class="productDetail">
    <div class="=container-fluid">

        <div class="productImage lazy" style="background-image: url(@productImage);">
            <div class="container ">
                <p>@currSegment.Name</p>
                <p class="productTitle">@currProduct.Name</p>
                <div class="row byline">
                    <div class="col-md-6 col-xs-12">@currProduct.GetPropertyValue("ebankIT_byline")</div>
                </div>
                <p>
                    <a href="#">
                        @Umbraco.GetDictionaryValue("CalculateNow")
                        <img class="lazy" src="/css/images/knowmore-white.png" />
                    </a>
                </p>
            </div>
        </div>

    </div>
    <div class="container ">
        <div class="row">
            <div class="row-height">
                <div class="col-xs-12 col-sm-8 col-sm-height productDetailLeft">
                    <div class="inside inside-full-height">
                        <div class="content">
                            <h1>@Umbraco.GetDictionaryValue("AboutThisProduct")                           </h1>
                            <div class="productDescription">
                                <h2>@Umbraco.GetDictionaryValue("Advantages") </h2>
                                <p>
                                    @currProduct.GetPropertyValue("ebankIT_productDescription")
                                </p>

                            </div>

                            <div class="ProductDetailTabs">

                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs responsive" role="tablist" id="productTabs">
                                    <li role="presentation" class="active">
                                        <a href="#home" aria-controls="home" role="tab" data-toggle="tab">@Umbraco.GetDictionaryValue("Remuneration")    </a>
                                        <div class="arrow"></div>
                                    </li>
                                    <li role="presentation">
                                        <a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">@Umbraco.GetDictionaryValue("Characteristics")</a><div class="arrow"></div>
                                    </li>
                                    <li role="presentation">
                                        <a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">@Umbraco.GetDictionaryValue("HowToSubscribe")</a><div class="arrow"></div>
                                    </li>
                                    <li role="presentation">
                                        <a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">@Umbraco.GetDictionaryValue("LegalInformation")</a><div class="arrow"></div>
                                    </li>
                                </ul>

                                <!-- Tab panes -->
                                <div class="tab-content responsive" id="collapse-productTabs">
                                    <div role="tabpanel" class="tab-pane active" id="home">@currProduct.GetPropertyValue("ebankIT_remuneration")</div>
                                    <div role="tabpanel" class="tab-pane" id="profile">@currProduct.GetPropertyValue("ebankIT_charateristics")</div>
                                    <div role="tabpanel" class="tab-pane" id="messages">@currProduct.GetPropertyValue("ebankIT_howToSubscribe")</div>
                                    <div role="tabpanel" class="tab-pane" id="settings">@currProduct.GetPropertyValue("ebankIT_legalInformation")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-sm-height col-sm-top productDetailRight">
                    <div class="inside inside-full-height">
                        <div class="content">

                            <h1>&nbsp;</h1>
                            <a href="#" class="subscribe gradientBG">@Umbraco.GetDictionaryValue("SubscribeNow")</a>

                            @if (CurrentPage.ebankIT_productqrcode != null && !(CurrentPage.ebankIT_productqrcode is Umbraco.Core.Dynamics.DynamicNull))
                            {
                                var m =  (CurrentPage.ebankIT_productqrcode);

                                <div class="productQRCode">
                                    <p class="text-center">@Umbraco.GetDictionaryValue("SubscribeNowQR1").ToString()</p>
                                    <img class="lazy img-responsive" src="@m.Url" /><p class="text-center">@Umbraco.GetDictionaryValue("SubscribeNowQR2")</p>
                                </div>

                            }

                            @if (CurrentPage.ebankIT_productdocument01 != null && !(CurrentPage.ebankIT_productdocument01 is Umbraco.Core.Dynamics.DynamicNull))
                            {
                                var m =  (CurrentPage.ebankIT_productdocument01);

                                <div class="productDoc">
                                    <a href="@m.Url"><img class="lazy img-responsive" src="~/css/images/icon-pdf.png" /></a>
                                    <a href="@m.Url">@Umbraco.GetDictionaryValue("ProductDoc01")</a>
                                </div>
                            }
                            @if (CurrentPage.ebankIT_productdocument02 != null && !(CurrentPage.ebankIT_productdocument02 is Umbraco.Core.Dynamics.DynamicNull))
                            {
                                var m =  (CurrentPage.ebankIT_productdocument02);

                                <div class="productDoc">
                                    <a href="@m.Url"><img class="lazy img-responsive" src="~/css/images/icon-pdf.png" /></a>
                                    <a href="@m.Url">@Umbraco.GetDictionaryValue("ProductDoc02")</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="productsHome">
            <div class="row">
                <div class="productsHomeTitle">@Umbraco.GetDictionaryValue("MoreToYou")</div>
                @{Html.RenderPartial("MoreToYou");}
            </div>
        </div>
    </div>
</div>